<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_records"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical"
    android:weightSum="1">


    <Button
        android:id="@+id/vkButton"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="27dp"
        android:background="@color/vk_color"
        android:onClick="onClick"
        android:text="sign in vk"
        android:visibility="visible" />


    <TextView
        android:id="@+id/Color"
        android:layout_width="400dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/vkButtonOut"
        android:layout_marginTop="26dp"
        android:paddingTop="5dp"
        android:text="Color title bar:"
        android:textAlignment="center"
        android:textColor="@color/vk_black"
        android:textSize="20dp" />

    <Spinner
        android:id="@+id/spinner1"
        android:layout_width="750dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/Color"
        android:background="@android:drawable/btn_dropdown"
        android:entries="@array/ColorList"
        android:spinnerMode="dropdown" />

    <Button
        android:id="@+id/OffButton"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Color"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:text="home" />

            <Button
                android:id="@+id/vkButtonOut"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp"
                android:background="@color/vk_color"
                android:onClick="onClick"
                android:text="sign out vk"
                android:visibility="visible" />



</RelativeLayout>
